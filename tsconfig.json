{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node"
    ],
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "es2015.promise"
    ],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
